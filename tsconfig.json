{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@images/*": [
        "assets/images/*"
      ],
      "@images": [
        "assets/images"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@wallet/*": [
        "wallet/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@interfaces": [
        "interfaces"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@assets": [
        "assets"
      ],
      "@components/*": [
        "components/*"
      ],
      "@templates/*": [
        "components/templates/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@hoc/*": [
        "hoc/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}